<% form_for(@follow) do |f| %>
<h1>
	Add 
	<%if params[:id]%>
		<%= f.text_field :twitter, { :value => params[:id]} %> 
	<%else%>
		nobody
	<%end%>
	to a Clique</h1>

  <%= f.error_messages %>

  <p>
    <%= f.label 'Clique' %><br />
    <%= collection_select(:follow, :clique_id, Clique.all, :id, :name ) %>
	<%= link_to 'Create a new Clique', cliques_path + "/new" %>

  </p>
  <p>
    <%= f.label :note %><br />
    <%= f.text_area :note %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', follows_path %>